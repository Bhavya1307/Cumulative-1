@model Assignment3.Models.Teacher
@{
    ViewBag.Title = "DeleteConfirm";
}

<div id="containershow">
    <nav>
        <a class="navlink" style="text-decoration: none;" href="/Teacher/Show/@Model.TeacherId">Cancel</a>
    </nav>
    <h2>Are you sure you want to delete @Model.TeacherFname @Model.TeacherLname?</h2>
    <p>This action can't be undone.</p>
    <form method="POST" action="/Teacher/Delete/@Model.TeacherId">
        <button style="display:block; margin: 0 auto; color: white; background-color:red; text-decoration:none; border: 2px solid #000; border-radius:5px;">Confirm Delete</button>
    </form>
</div>



